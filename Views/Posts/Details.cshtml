@model BlogApp.Models.Post
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <h1>@Model.Title</h1>
    <p class="text-muted">Posted on @Model.CreatedAt.ToString("g") â€¢ Views: @Model.ViewCount</p>
    <div class="mb-5">@Html.Raw(Model.Content.Replace("\n","<br/>"))</div>

    <h3>Comments</h3>
    @if (!Model.Comments.Any())
    {
        <p>No comments yet.</p>
    }
    else
    {
        <ul class="list-group mb-4">
        @foreach(var c in Model.Comments) {
            <li class="list-group-item">
                @c.Content <br/>
                <small class="text-muted">by @c.UserId on @c.CreatedAt.ToString("g")</small>
            </li>
        }
        </ul>
    }

    <h5>Add a comment</h5>
    <form asp-controller="Comments" asp-action="Create" method="post" class="mb-5">
        <input type="hidden" name="postId" value="@Model.Id" />
        <div class="mb-3">
            <textarea name="Content" class="form-control" rows="3" placeholder="Your comment"></textarea>
        </div>
        <button class="btn btn-primary">Post Comment</button>
    </form>
</div>
