@model IEnumerable<BlogApp.Models.Post>
@{
    ViewData["Title"] = "All Posts";
}

<div class="container py-4">
    <h1>@ViewData["Title"]</h1>
    <p><a asp-action="Create" class="btn btn-primary">New Post</a></p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Blog</th>
                <th>Created</th>
                <th>Views</th>
                <th>Likes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model) {
            <tr>
                <td>@p.Title</td>
                <td>@p.Blog.Title</td>
                <td>@p.CreatedAt.ToString("g")</td>
                <td>@p.ViewCount</td>
                <td>@p.Likes</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
