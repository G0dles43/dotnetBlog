@model BlogApp.Models.Comment
@{
    ViewData["Title"] = "Edit Comment";
}

<div class="container py-4">
    <h1>@ViewData["Title"]</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Update Comment</button>
        <a asp-action="Details" asp-controller="Posts" asp-route-id="@Model.PostId" class="btn btn-secondary">Back to Post</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
