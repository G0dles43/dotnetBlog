@model BlogApp.Models.Comment
@{
    ViewData["Title"] = "Delete Comment";
}

<div class="container py-4">
    <h1>@ViewData["Title"]</h1>

    <p>Are you sure you want to delete this comment?</p>

    <div class="mb-3">
        <strong>Comment Content:</strong>
        <p>@Model.Content</p>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div>
                <img src="@Model.ImagePath" class="fixed-image" alt="Comment image" />
            </div>
        }
    </div>

    <form asp-action="Delete" asp-controller="Comments" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-controller="Posts" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
