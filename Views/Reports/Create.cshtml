@{
    ViewData["Title"] = "Report Content";
}

<h2>Report a Post or Comment</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="postId" value="@ViewBag.PostId" />
    <input type="hidden" name="commentId" value="@ViewBag.CommentId" />

    <div class="mb-3">
        <label for="content" class="form-label">Reason for Report</label>
        <textarea name="content" class="form-control" rows="4" placeholder="Describe the issue..."></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Submit Report</button>

    @if (ViewBag.PostId != null)
    {
        <a asp-controller="Posts" asp-action="Details" asp-route-id="@ViewBag.PostId" class="btn btn-secondary">Back to Post</a>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
