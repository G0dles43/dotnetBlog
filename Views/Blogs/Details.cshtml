@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model BlogApp.Models.Blog
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="mt-4"></div>
        <a asp-action="Index" class="btn btn-secondary">Back to Blogs</a>
    </div>
    
    <h1>@Model.Title</h1>
    <p class="lead">@Model.Description</p>

    <a asp-controller="Posts" asp-action="Create" asp-route-blogId="@Model.Id" class="btn btn-primary">
        Create New Post
    </a>
   
    <h3>Posts</h3>
    
    @if (ViewBag.SelectedTag != null)
    {
        <div class="mb-3">
            <h5>Filtering by tag: 
                <span class="badge bg-info text-dark">@ViewBag.SelectedTag.Name</span>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary ms-2">Clear</a>
            </h5>
        </div>
    }
    

        <div class="btn-group" role="group">
            @{
                var currentTag = ViewBag.SelectedTag?.Id;
                var sortOptions = new Dictionary<string, string>
                {
                    { "name", "Alfabetycznie A-Z" },
                    { "name_desc", "Alfabetycznie Z-A" },
                    { "views", "Najmniej wyświetleń" },
                    { "views_desc", "Najwięcej wyświetleń" }
                };
            }

            @foreach (var option in sortOptions)
            {
                <a asp-action="Details" 
                asp-route-id="@Model.Id" 
                asp-route-tagId="@currentTag"
                asp-route-sortOrder="@option.Key"
                class="btn btn-outline-primary @(ViewBag.CurrentSort == option.Key ? "active" : "")">
                    @option.Value
                </a>
            }
        </div>
    

    @if (!Model.Posts.Any())
    {
        <p>No posts in this blog yet.</p>
    }
    else
    {
    
       <ul class="list-group">
            @foreach (var post in Model.Posts)
            {
                <li class="list-group-item dynamic-bg d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="dynamic-link">
                            @post.Title
                            @if (post.PostTags.Any())
                            {
                                <div class="mt-1">
                                    @foreach (var pt in post.PostTags)
                                    {
                                        <a asp-action="Details"
                                        asp-route-id="@Model.Id"
                                        asp-route-tagId="@pt.Tag.Id"
                                        class="badge bg-primary text-white me-1">
                                            @pt.Tag.Name
                                        </a>
                                    }
                                </div>
                            }

                        </a>
                    </div>

                    @if (post.UserId == UserManager.GetUserId(User) || User.IsInRole("Admin"))
                    {
                        <div class="btn-group btn-group-sm mt-2 mt-md-0" role="group">
                            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-outline-warning">Edit</a>
                            <a asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    }
                </li>
            }
        </ul>
    }
    
  
    
</div>
