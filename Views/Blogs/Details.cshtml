@model BlogApp.Models.Blog
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <h1>@Model.Title</h1>
    <p class="lead">@Model.Description</p>

    <h3 class="mt-5">Posts</h3>
        <p>
    <a asp-controller="Posts"
        asp-action="Create"
        asp-route-blogId="@Model.Id"
        class="btn btn-primary">
        Create New Post
    </a>
    </p>
    @if (!Model.Posts.Any()) {
        <p>No posts yet.</p>
    } else {
        <ul class="list-group">
        @foreach(var p in Model.Posts) {
            <li class="list-group-item">
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id">@p.Title</a>
            </li>
        }
        </ul>
    }
</div>
